{
	"name": "ESP-IDF QEMU",
	// Use pre-built image from ghcr.io (faster startup)
	// To build locally instead, comment "image" and uncomment "build"
	"image": "ghcr.io/iu3qez/remotecwkeyer-devcontainer:latest",
	// "build": {
	// 	"dockerfile": "Dockerfile"
	// },

	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.defaultProfile.linux": "bash",
				"idf.espIdfPath": "/opt/esp/idf",
				"idf.toolsPath": "/opt/esp",
				"idf.gitPath": "/usr/bin/git"
			},
			"extensions": [
				"espressif.esp-idf-extension",
				"espressif.esp-idf-web",
				"Anthropic.claude-code",
				"ms-vscode.cpptools-extension-pack",
				"ms-vscode.cpptools",
				"svelte.svelte-vscode"
			]
		}
	},
	"runArgs": [
		"--privileged",
		"--device=/dev/ttyUSB0:/dev/ttyUSB0"
	],
	"containerUser": "vscode",
	"remoteUser": "vscode",



	"mounts": [
    "source=${localEnv:HOME}/.claude,target=/home/vscode/.claude,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.claude.json,target=/home/vscode/.claude.json,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.config/PVS-Studio,target=/home/vscode/.config/PVS-Studio,type=bind,consistency=cached",
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],

  "postCreateCommand": "cd components/keyer_webui/frontend && npm install",
	"postStartCommand": "DOCKER_GID=$(stat -c '%g' /var/run/docker.sock) && (getent group $DOCKER_GID || sudo groupadd -g $DOCKER_GID docker-host) && sudo usermod -aG $DOCKER_GID vscode && newgrp docker-host || true"
}
